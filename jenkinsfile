pipeline {
    agent any

    environment {
        REMOTE_HOST = '3.129.123.245'
        REMOTE_USER = 'ubuntu' // Based on your credential
        DOCKERFILE_DIR = 'docker'
        IMAGE_NAME = "spotify-pipeline"
        IMAGE_TAG = "${env.BUILD_ID}"
    }

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/Gabe-ios/Spotify-Pipeline.git'
            }
        }

        stage('Build Docker Image on Remote Host') {
            steps {
                sshagent(['ec2-ssh-key']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no \$REMOTE_USER@\$REMOTE_HOST '
                            rm -rf Spotify-Pipeline &&
                            git clone https://github.com/Gabe-ios/Spotify-Pipeline.git &&
                            cd Spotify-Pipeline &&
                            docker build -f \$DOCKERFILE_DIR/Dockerfile -t \$IMAGE_NAME:\$IMAGE_TAG .
                        '
                    """
                }
            }
        }

        stage('Run Docker Container on Remote Host') {
            steps {
                sshagent(['ec2-ssh-key']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no \$REMOTE_USER@\$REMOTE_HOST '
                            docker stop \$IMAGE_NAME || true &&
                            docker rm \$IMAGE_NAME || true &&
                            docker run -d --name \$IMAGE_NAME \$IMAGE_NAME:\$IMAGE_TAG
                        '
                    """
                }
            }
        }
    }
}
